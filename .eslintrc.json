{
    "parserOptions": {
      "ecmaVersion": 2021,
      "ecmaFeatures": {
        "jsx": true
      },
      "sourceType": "module"
    },
  
    "env": {
      "es2021": true,
      "node": true
    },
  
    "extends": [
        "plugin:react/recommended",
        "eslint:recommended",
        "plugin:prettier/recommended"
    ],
    
    "plugins": [
      "import",
      "node",
      "promise"
    ],
  
    "globals": {
      "document": "readonly",
      "navigator": "readonly",
      "window": "readonly"
    },
  
    "rules": {
      "no-unused-vars": "warn"
    }
  }